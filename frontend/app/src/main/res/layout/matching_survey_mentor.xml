<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPurple">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 희망 멘토 조사 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="멘토 정보 등록"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:textColor="@color/colorWhite"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp" />

            </RelativeLayout>

            <!-- 취미 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_white_background"
                android:padding="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/hobbiesTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. 취미"
                    android:textSize="25sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="20dp" />

                <TextView
                    android:id="@+id/hobbiesTitlehintText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="멘토링을 진행하고자 하는 취미를 고르세요."
                    android:layout_below="@id/hobbiesTitleTextView"
                    android:textSize="16sp"
                    android:textColor="@color/colorGray"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="20dp" />


                <Spinner
                    android:id="@+id/spinnerHobbies"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/hobbiesTitlehintText"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/spinnerHobbies">

                    <TextView
                        android:id="@+id/nohobby_guide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="목록에 없다면, 아래 버튼을 눌러 취미를 둘러보세요 :)"
                        android:textSize="14sp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp" />

                    <Button
                        android:id="@+id/TOP3btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_below="@id/nohobby_guide"
                        android:layout_centerHorizontal="true"
                        android:text="Top3 취미 보러가기"/>

                </RelativeLayout>
            </RelativeLayout>

            <!-- 성별 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_white_background"
                android:padding="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/genderTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. 성별"
                    android:textSize="25sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="20dp" />

                <TextView
                    android:id="@+id/genderTitlehintText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="본인의 성별을 고르세요."
                    android:layout_below="@id/genderTitleTextView"
                    android:textSize="16sp"
                    android:textColor="@color/colorGray"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="20dp" />

                <RadioGroup
                    android:id="@+id/radioGroupGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/genderTitlehintText"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp">

                    <RadioButton
                        android:id="@+id/maleRadioButton"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:text="남자"
                        android:textSize="20dp"/>

                    <RadioButton
                        android:id="@+id/femaleRadioButton"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:text="여자"
                        android:layout_marginTop="7dp"
                        android:textSize="20dp"/>
                </RadioGroup>
            </RelativeLayout>

            <!-- 연령대 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_white_background"
                android:padding="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/ageTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. 연령대"
                    android:textSize="25sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="20dp" />

                <EditText
                    android:id="@+id/ageEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ageTitleTextView"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:inputType="number"
                    android:hint="나이를 입력하세요"
                    android:maxLength="2"/>
            </RelativeLayout>

            <!-- 지역 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_white_background"
                android:padding="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/locationTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. 지역"
                    android:textSize="25sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="20dp" />

                <TextView
                    android:id="@+id/locationTitlehintText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="대면 멘토링이 가능한 지역을 모두 고르세요."
                    android:layout_below="@id/locationTitleTextView"
                    android:textSize="16sp"
                    android:textColor="@color/colorGray"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/locationTitlehintText"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/seoulCheckBox"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:text="서울"
                        android:textSize="20dp"/>

                    <CheckBox
                        android:id="@+id/busanCheckBox"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="부산"
                        android:textSize="20dp"/>

                    <CheckBox
                        android:id="@+id/daeguCheckBox"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="대구"
                        android:textSize="20dp"/>

                    <CheckBox
                        android:id="@+id/incheonCheckBox"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="인천"
                        android:textSize="20dp"/>

                    <CheckBox
                        android:id="@+id/gwangjuCheckBox"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="광주"
                        android:textSize="20dp"/>

                    <CheckBox
                        android:id="@+id/daejeonCheckBox"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="대전"
                        android:textSize="20dp"/>

                    <CheckBox
                        android:id="@+id/ulsanCheckBox"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="울산"
                        android:textSize="20dp"/>

                    <CheckBox
                        android:id="@+id/sejongCheckBox"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="세종"
                        android:textSize="20dp"/>

                    <CheckBox
                        android:id="@+id/gyunggiCheckBox"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="경기"
                        android:textSize="20dp"/>

                    <CheckBox
                        android:id="@+id/gangwonCheckBox"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="강원"
                        android:textSize="20dp"/>

                    <CheckBox
                        android:id="@+id/chungbukCheckBox"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="충북"
                        android:textSize="20dp"/>

                    <CheckBox
                        android:id="@+id/chungnamCheckBox"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="충남"
                        android:textSize="20dp"/>

                    <CheckBox
                        android:id="@+id/jeonbukCheckBox"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="전북"
                        android:textSize="20dp"/>

                    <CheckBox
                        android:id="@+id/jeonnamCheckBox"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="전남"
                        android:textSize="20dp"/>

                    <CheckBox
                        android:id="@+id/gyungbukCheckBox"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="경북"
                        android:textSize="20dp"/>

                    <CheckBox
                        android:id="@+id/gyungnamCheckBox"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="경남"
                        android:textSize="20dp"/>

                    <CheckBox
                        android:id="@+id/jejuCheckBox"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="제주"
                        android:textSize="20dp"/>
                    />
                </LinearLayout>
            </RelativeLayout>

            <!-- 난이도 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_white_background"
                android:padding="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp">

                <TextView
                    android:id="@+id/levelTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5. 난이도"
                    android:textSize="25sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="20dp" />

                <TextView
                    android:id="@+id/levelTitlehintText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="희망하는 멘토링의 수준을 모두 고르세요."
                    android:layout_below="@id/levelTitleTextView"
                    android:textSize="16sp"
                    android:textColor="@color/colorGray"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/levelTitlehintText"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/easyCheckBox"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="초급" />

                    <CheckBox
                        android:id="@+id/mediumCheckBox"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:textSize="20dp"
                        android:text="중급" />

                    <CheckBox
                        android:id="@+id/hardCheckBox"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:textSize="20dp"
                        android:text="고급" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="제출"
        android:textColor="@color/colorWhite"
        android:textSize="24sp"
        android:layout_gravity="bottom|center"
        android:background="@drawable/rounded_button_gray"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:enabled="false"/>

</LinearLayout>
