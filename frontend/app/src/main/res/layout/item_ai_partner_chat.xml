<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250dp"
        android:background="@drawable/rounded_background_ai_received"
        android:paddingVertical="13dp"
        android:paddingHorizontal="20dp"
        android:text="메시지"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:visibility="gone"
        />

<!--    <Button-->
<!--        android:id="@+id/nn_btn"-->
<!--        android:layout_width="200dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="시작"-->
<!--        android:textSize="18sp"-->
<!--        android:textColor="@color/colorWhite"-->
<!--        android:layout_marginTop="8dp"-->
<!--        android:background="@drawable/button_background_purple"-->
<!--        app:layout_constraintTop_toBottomOf="@id/tv_msg"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        android:visibility="gone"/>-->

    <ImageView
        android:id="@+id/loading"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_background_ai_received"
        android:src="@drawable/ic_loading"
        android:paddingVertical="13dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/text_n_btn_layout"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_msg"
        app:layout_constraintHorizontal_bias="0.0"
        android:paddingVertical="13dp">

                <TextView
                    android:id="@+id/n_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="300dp"
                    android:background="@drawable/rounded_background_ai_received"
                    android:paddingVertical="13dp"
                    android:paddingHorizontal="20dp"
                    android:text=""
                    android:textSize="18sp"
                    android:textColor="@color/colorBlack"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginBottom="10dp"
                    />

        <Button
            android:id="@+id/n_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="시작"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_background_purple"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/leveltest_layout"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_msg"
        app:layout_constraintHorizontal_bias="0.0"
        android:paddingVertical="13dp">

<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:maxWidth="300dp"-->
<!--            android:background="@drawable/rounded_background_ai_received"-->
<!--            android:paddingVertical="13dp"-->
<!--            android:paddingHorizontal="20dp"-->
<!--            android:text="@string/start_leveltest"-->
<!--            android:textSize="18sp"-->
<!--            android:textColor="@color/colorBlack"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            app:layout_constraintHorizontal_bias="0.0"-->
<!--            android:layout_marginBottom="10dp"-->
<!--            />-->

        <Button
            android:id="@+id/leveltest_start_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="시작"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_background_purple"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/challenge_nums"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_msg"
        android:visibility="gone">

        <!-- 세로 방향으로 배치된 LinearLayout -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/challenge_npker"
            android:layout_marginEnd="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="215dp"
                android:background="@drawable/rounded_background_ai_received"
                android:paddingVertical="13dp"
                android:paddingHorizontal="20dp"
                android:text="@string/challenge_btns_guide"
                android:textSize="18sp"
                android:textColor="@color/colorBlack"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/button_submit"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:maxWidth="220dp"
                android:background="@drawable/rounded_background_ai_sent"
                android:text="제출"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/colorWhite"/>

        </LinearLayout>

        <!-- NumberPicker는 RelativeLayout의 오른쪽에 위치 -->
        <NumberPicker
            android:id="@+id/challenge_npker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="70dp"/>

    </RelativeLayout>



    <LinearLayout
        android:id="@+id/last_btns"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_msg"
        app:layout_constraintHorizontal_bias="0.0"
        android:paddingVertical="13dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="300dp"
            android:background="@drawable/rounded_background_ai_received"
            android:paddingVertical="13dp"
            android:paddingHorizontal="20dp"
            android:text="@string/move_to_normal_chat"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp"
            />

        <Button
            android:id="@+id/move_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이동"
            android:textColor="@color/colorWhite"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_background_purple"/>

        <Button
            android:id="@+id/restart_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="재시작"
            android:textColor="@color/colorWhite"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_background_disabled"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
