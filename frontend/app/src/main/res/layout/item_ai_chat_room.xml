<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    app:layout_goneMarginBottom="10dp">

    <!-- 프로필 이미지 뷰 -->
    <ImageView
        android:id="@+id/ai_chat_profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitCenter"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_home_mypage" />

    <!-- 텍스트 컨테이너 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ListText"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1">

        <!-- '채팅 상대자 이름' 텍스트뷰 -->
        <TextView
            android:id="@+id/textViewUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="채팅 상대자 이름"
            android:layout_margin="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>

        <!-- '취미 종류' 텍스트뷰 -->
        <TextView
            android:id="@+id/hobby_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취미 종류"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:textSize="14sp"
            android:background="@color/button_color"
            android:textColor="@color/colorWhite"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@id/textViewUser"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- '마지막 대화 내용' 텍스트뷰 -->
        <TextView
            android:id="@+id/last_chat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마지막 대화 시간"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            android:padding="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/hobby_type"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
